<?xml version="1.0" encoding="UTF-8"?>

<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="LsStorefrontCustomerRedirectToAccountDashboardAfterLoggingInWithEmailIncorrectPasswordTest"
          extends="StorefrontCustomerRedirectToAccountDashboardAfterLoggingInTest">
        <annotations>
            <features value="Customer"/>
            <stories value="Customer logs in with email, incorrect password and gets an error"/>
            <title value="Redirect to account dashboard"/>
            <description value="Customer should be shown an error on login page if tries to login with valid email but invalid password."/>
            <severity value="CRITICAL"/>
            <group value="ls"/>
            <group value="lsCustomer"/>
        </annotations>
        <before>
            <remove keyForRemoval="createCustomer"/>
            <magentoCLI command="config:set {{ServiceStore.path}} {{ServiceStore.value}}" stepKey="serviceStore" before="cleanInvalidatedCaches"/>
            <magentoCLI command="config:set {{ServiceHierarchyCode.path}} {{ServiceHierarchyCode.value}}" stepKey="serviceHierarchyCode" before="cleanInvalidatedCaches"/>
            <magentoCLI command="config:set {{ServiceBaseUrl.path}} {{ServiceBaseUrl.value}}" stepKey="serviceBaseUrl" before="cleanInvalidatedCaches"/>
            <magentoCLI command="config:set {{ServiceVersion.path}} {{ServiceVersion.value}}" stepKey="serviceVersion" before="cleanInvalidatedCaches"/>
            <magentoCLI command="config:set {{ServiceCentralVersion.path}} {{ServiceCentralVersion.value}}" stepKey="serviceCentralVersion" before="cleanInvalidatedCaches"/>
            <magentoCLI command="config:set {{ServiceIndustry.path}} {{ServiceIndustry.value}}" stepKey="ServiceIndustry" before="cleanInvalidatedCaches"/>
        </before>
        <after>
            <remove keyForRemoval="deleteCustomer"/>
        </after>
        <remove keyForRemoval="assertAccountPageTitle"/>
        <remove keyForRemoval="assertAccountLinkInUrl"/>
        <actionGroup ref="LoginToStorefrontActionGroup" stepKey="loginToStorefrontAccount">
            <argument name="Customer" value="Ls_Simple_US_CustomerIncorrectPassword"/>
        </actionGroup>
        <actionGroup ref="AssertMessageCustomerLoginActionGroup" stepKey="seeErrorMessageAfterFirstAttempt" after="loginToStorefrontAccount">
            <argument name="messageType" value="error"/>
            <argument name="message" value="Invalid LS Central login or password."/>
        </actionGroup>
    </test>
</tests>
