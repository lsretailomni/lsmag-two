<?xml version="1.0" encoding="UTF-8"?>

<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="LsStorefrontCustomerRedirectToAccountDashboardAfterLoggingInTest"
          extends="StorefrontCustomerRedirectToAccountDashboardAfterLoggingInTest">
        <before>
            <remove keyForRemoval="createCustomer"/>
            <magentoCLI command="config:set {{ServiceStore.path}} {{ServiceStore.value}}" stepKey="serviceStore" before="cleanInvalidatedCaches"/>
            <magentoCLI command="config:set {{ServiceHierarchyCode.path}} {{ServiceHierarchyCode.value}}" stepKey="serviceHierarchyCode" before="cleanInvalidatedCaches"/>
            <magentoCLI command="config:set {{ServiceBaseUrl.path}} {{ServiceBaseUrl.value}}" stepKey="serviceBaseUrl" before="cleanInvalidatedCaches"/>
            <magentoCLI command="config:set {{ServiceVersion.path}} {{ServiceVersion.value}}" stepKey="serviceVersion" before="cleanInvalidatedCaches"/>
            <magentoCLI command="config:set {{ServiceCentralVersion.path}} {{ServiceCentralVersion.value}}" stepKey="serviceCentralVersion" before="cleanInvalidatedCaches"/>
            <magentoCLI command="config:set {{ServiceIndustry.path}} {{ServiceIndustry.value}}" stepKey="ServiceIndustry" before="cleanInvalidatedCaches"/>
            <actionGroup ref="AdminLoginActionGroup" stepKey="login" after="cleanInvalidatedCaches"/>
        </before>
        <after>
            <remove keyForRemoval="deleteCustomer"/>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout" after="cleanInvalidatedCaches"/>
        </after>

        <actionGroup ref="LoginToStorefrontActionGroup" stepKey="loginToStorefrontAccount">
            <argument name="Customer" value="Ls_Simple_US_Customer"/>
        </actionGroup>
        <actionGroup ref="DeleteCustomerByEmailActionGroup" stepKey="deleteNewUser" after="assertAccountLinkInUrl">
            <argument name="email" value="{{Ls_Simple_US_Customer.email}}"/>
        </actionGroup>
        <actionGroup ref="ResetAdminDataGridToDefaultViewActionGroup" stepKey="resetGrid" after="deleteNewUser"/>
    </test>
</tests>
