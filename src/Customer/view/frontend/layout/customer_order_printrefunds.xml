<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="print"/>
    <update handle="sales_order_creditmemo_renderers"/>
    <update handle="customer_account"/>
    <update handle="customer_order_info_links"/>
    <update handle="sales_order_item_price"/>

    <body>
        <referenceContainer name="page.main.title">
            <block class="Ls\Customer\Block\Order\Info" name="custom.order.status"
                   template="Ls_Customer::order/order_status.phtml"/>
            <block class="Ls\Customer\Block\Order\Info" name="custom.order.date"
                   template="Ls_Customer::order/order_date.phtml"/>
            <container name="order.actions.container" htmlTag="div" htmlClass="actions-toolbar order-actions-toolbar">
                <block class="Ls\Customer\Block\Order\Info" as="buttons" name="sales.order.info.buttons" template="Ls_Customer::order/info/buttons.phtml" cacheable="false"/>
            </container>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Ls\Customer\Block\Order\Creditmemo" name="sales.order.creditmemo" cacheable="false" after="sales.order.info.links">
                <block class="Ls\Customer\Block\Order\Creditmemo\Items" name="creditmemo_items" template="Ls_Customer::order/creditmemo/items.phtml">
                    <block class="Ls\Customer\Block\Order\Item\Renderer" name="custom_order_item_renderer"/>
                    <block class="Magento\Framework\View\Element\RendererList" name="sales.order.creditmemo.renderers" as="renderer.list"/>
                    <block class="Ls\Customer\Block\Order\Totals" name="custom_order_totals" template="Ls_Customer::order/totals.phtml">
                        <arguments>
                            <argument name="label_properties" xsi:type="string">colspan="6" class="mark"</argument>
                            <argument name="value_properties" xsi:type="string">class="amount"</argument>
                        </arguments>
                    </block>
                </block>
            </block>
        </referenceContainer>

    </body>
</page>
