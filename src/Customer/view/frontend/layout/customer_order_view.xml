<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="page.main.title">
            <block class="Ls\Customer\Block\Order\Info" name="custom.order.status" template="Ls_Customer::order/order_status.phtml"/>
            <block class="Ls\Customer\Block\Order\Info" name="custom.order.date" template="Ls_Customer::order/order_date.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Ls\Customer\Block\Order\View" name="custom_order_view" cacheable="false">
                <block class="Ls\Customer\Block\Order\Items" name="custom_order_items" template="Ls_Customer::order/items.phtml">
                    <block class="Ls\Customer\Block\Order\Item\Renderer" name="custom_order_item_renderer" />
                    <block class="Ls\Customer\Block\Order\Totals" name="custom_order_totals" template="Ls_Customer::order/totals.phtml">
                        <arguments>
                            <argument name="label_properties" xsi:type="string">colspan="4" class="mark"</argument>
                            <argument name="value_properties" xsi:type="string">class="amount"</argument>
                        </arguments>
                    </block>
                </block>
            </block>
            <block class="Ls\Customer\Block\Order\Info" name="custom.order.info" template="Ls_Customer::order/useful_info.phtml" after="custom_order_view"/>
            <block class="Ls\Customer\Block\Order\Info" as="info" name="sales.order.info" after="custom.order.info"/>
        </referenceContainer>
    </body>
</page>