<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="checkout_item_price_renderers"/>
    <body>
        <referenceBlock name="checkout.cart.item.renderers.configurable" template="Ls_Omni::cart/item/default.phtml">
            <arguments>
                <argument name="view_model" xsi:type="object">Ls\Omni\ViewModel\CartViewModel</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="checkout.cart.item.renderers.default" template="Ls_Omni::cart/item/default.phtml">
            <arguments>
                <argument name="view_model" xsi:type="object">Ls\Omni\ViewModel\CartViewModel</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="checkout.cart.item.renderers.simple" template="Ls_Omni::cart/item/default.phtml">
            <arguments>
                <argument name="view_model" xsi:type="object">Ls\Omni\ViewModel\CartViewModel</argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="checkout.cart.item.renderers.bundle" template="Ls_Omni::cart/item/default.phtml">
            <arguments>
                <argument name="view_model" xsi:type="object">Ls\Omni\ViewModel\CartViewModel</argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
