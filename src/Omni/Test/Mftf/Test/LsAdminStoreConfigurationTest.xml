<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="LsAdminStoreConfigurationTest">
        <annotations>
            <features value="LsAdminStoreConfigurationTest"/>
            <stories value="Store Configuration - LS Retail"/>
            <title value="Verify settings for base url, store, hierarchy code, etc."/>
            <description value="Verify settings for base url, store, hierarchy code, etc."/>
            <severity value="CRITICAL"/>
            <group value="ls"/>
            <group value="lsConfig"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <amOnPage url="/admin/admin/system_config/edit/section/ls_mag/website/1/#ls_mag_service-link" stepKey="navigateToConfigurationSection" />
        </before>
        <after>
            <actionGroup ref="CliCacheCleanActionGroup" stepKey="flushCache">
                <argument name="tags" value="config"/>
            </actionGroup>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        <selectOption selector="{{LsConfigManagementSection.ServiceCentralType}}" userInput="{{ServiceCentralTypeSaaS.value}}" stepKey="fillCentralTypeSaaS" />
        <fillField selector="{{LsConfigManagementSection.ServiceTenant}}" userInput="{{ServiceTenant.value}}" stepKey="setServiceTenant"/>
        <fillField selector="{{LsConfigManagementSection.ServiceEnv}}" userInput="{{ServiceEnv.value}}" stepKey="setServiceEnv"/>
        <fillField selector="{{LsConfigManagementSection.ServiceCompany}}" userInput="{{ServiceCompany.value}}" stepKey="setServiceCompany"/>
        <click selector="{{LsConfigManagementSection.AutopopulateBaseUrl}}" stepKey="AutopopulateBaseUrl" after="setServiceCompany"/>
        <fillField selector="{{LsConfigManagementSection.ServiceClientId}}" userInput="{{ServiceClientId.value}}" stepKey="setServiceClientId"/>
        <fillField selector="{{LsConfigManagementSection.ServiceClientSecret}}" userInput="{{ServiceClientSecret.value}}" stepKey="setServiceClientSecret"/>
        <click selector="{{LsConfigManagementSection.ValidateBaseUrl}}" stepKey="validateBaseUrlSaaS" after="setServiceClientSecret"/>
        <wait stepKey="waitForPopupSaaS" time="20" after="validateBaseUrlSaaS" />
        <acceptPopup stepKey="clickOkSaaS" after="waitForPopupSaaS"/>
        <selectOption selector="{{LsConfigManagementSection.SelectedStore}}" userInput="Cronus Web Store" stepKey="fillStoreSaaS"/>
        <selectOption selector="{{LsConfigManagementSection.SelectedHierarchyCode}}" userInput="Clothing items" stepKey="fillHierarchySaaS"/>
        <comment userInput="saveStoreConfiguration" stepKey="commentSaaS"/>
        <waitForElementVisible selector="{{StoreConfigSection.Save}}" stepKey="waitForSaveButtonSaaS"/>
        <click selector="{{StoreConfigSection.Save}}" stepKey="clickSaveButtonSaaS"/>
        <waitForPageLoad stepKey="waitForPageLoadSaaS"/>
        <see selector="{{ContentManagementSection.StoreConfigurationPageSuccessMessage}}" userInput="You saved the configuration." stepKey="seeSuccessMessage3SaaS"/>

