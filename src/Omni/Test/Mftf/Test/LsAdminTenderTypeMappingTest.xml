<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="LsAdminTenderTypeMappingTest">
        <annotations>
            <features value="LsAdminTenderTypeMappingTest"/>
            <stories value="Tender Type mapping in Store Configuration - LS Retail"/>
            <title value="Verify tender type mappings."/>
            <description value="Verify tender type mappings."/>
            <severity value="CRITICAL"/>
            <group value="ls"/>
            <group value="lsConfig"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="LsReplicateStoreTenderTypeDataActionGroup" stepKey="replicateStoreTenderTypeData"/>
            
        </before>
        <after>
            <actionGroup ref="CliCacheCleanActionGroup" stepKey="flushCache">
                <argument name="tags" value="config"/>
            </actionGroup>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>
        
        <actionGroup ref="LsNavigateToAdminPageActionGroup" stepKey="navigateToLsConfigurationPage">
            <argument name="newWebsiteName" value="Main Website" />
        </actionGroup>
        <wait stepKey="waitForConfigPageLoad" time="30" after="navigateToLsConfigurationPage"/>
        <fillField selector="{{LsConfigManagementSection.ServiceBaseUrl}}" userInput="{{ServiceBaseUrl.value}}" stepKey="setServiceBaseUrl" after="waitForConfigPageLoad"/>
        <click selector="{{LsConfigManagementSection.ValidateBaseUrl}}" stepKey="validateBaseUrl" after="setServiceBaseUrl"/>
        <wait stepKey="waitForPopup" time="5" after="validateBaseUrl"/>
        <acceptPopup stepKey="clickOk" after="waitForPopup"/>
        <wait stepKey="waitForStoresLoad" time="5" after="clickOk"/>
        <selectOption selector="{{LsConfigManagementSection.SelectedStore}}" userInput="Cronus Web Store" stepKey="fillStore" after="waitForStoresLoad"/>
        <wait stepKey="waitForHierarchyLoad" time="5" after="fillStore"/>
        <selectOption selector="{{LsConfigManagementSection.SelectedHierarchyCode}}" userInput="Clothing items" stepKey="fillHierarchy" after="waitForHierarchyLoad"/>

        <wait stepKey="waitForHierarchy" time="5" after="fillHierarchy"/>
        <selectOption selector="{{LsConfigManagementSection.ItemOnePaymentMethod}}" userInput="Check / Money order" stepKey="ItemOnePaymentMethod" after="waitForHierarchy"/>
        <selectOption selector="{{LsConfigManagementSection.ItemOneTenderType}}" userInput="Check" stepKey="ItemOneTenderType"  after="waitForHierarchy"/>
        <selectOption selector="{{LsConfigManagementSection.ItemTwoPaymentMethod}}" userInput="Gift Card" stepKey="ItemTwoPaymentMethod" after="waitForHierarchy"/>
        <selectOption selector="{{LsConfigManagementSection.ItemTwoTenderType}}" userInput="Gift Card" stepKey="ItemTwoTenderType"  after="waitForHierarchy"/>
        <wait stepKey="waitBeforeSave" time="5" after="ItemTwoTenderType"/>
        
        
        <actionGroup ref="SaveStoreConfigurationActionGroup" stepKey="saveStoreConfiguration6"/>
        <see selector="{{ContentManagementSection.StoreConfigurationPageSuccessMessage}}" userInput="You saved the configuration." stepKey="seeSuccessMessage3"/>
    </test>
</tests>
