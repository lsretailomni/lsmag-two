<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="LsAdminResetCustomerDataTest" extends="StorefrontCreateCustomerTest">
        <annotations>
            <features value="LsAdminResetCustomerDataTest"/>
            <stories value="Reset customer data in Store Configuration - LS Retail"/>
            <title value="Reset customer data from Ls Admin config page."/>
            <description value="Reset customer data from Ls Admin config page."/>
            <severity value="CRITICAL"/>
            <group value="ls"/>
            <group value="lsConfig"/>
        </annotations>
        <before>
            <actionGroup ref="LsSetRequiredConfigsActionGroup" stepKey="setRequiredConfigs"/>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="CliIndexerReindexActionGroup" stepKey="reindex" >
                <argument name="indices" value=""/>
            </actionGroup>
            
        </before>
        <after>
            <actionGroup ref="CliCacheCleanActionGroup" stepKey="flushCache">
                <argument name="tags" value="config"/>
            </actionGroup>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logout"/>
        </after>

        <!-- Create Customer via store front-->
        <actionGroup ref="AssertMessageCustomerCreateAccountActionGroup" stepKey="seeSuccessMessage">
            <argument name="messageType" value="success"/>
            <argument name="message" value="Thank you for registering with Ls Retail."/>
        </actionGroup>

        <actionGroup ref="AssertStorefrontCustomerDashboardInformationActionGroup" stepKey="customerDashboardInformation"  after="seeSuccessMessage" />
        

        <!-- Navigate to LS Configuration Page -->
        <amOnPage url="{{LsAdminConfigurationPage.url}}" stepKey="navigateToConfigurationPage" after="customerDashboardInformation"/>
        <waitForPageLoad stepKey="waitForPageLoad1"/>
        <scrollTo selector="#ls_mag_restore_database-head" stepKey="scrollToResetDb" after="waitForPageLoad1"/>
        <wait stepKey="waitForConfigPageLoad" time="30" after="scrollToResetDb"/>
        <click selector="{{LsConfigManagementSection.ResetCustomerDataButton}}" stepKey="resetCustomerDataClick" after="waitForConfigPageLoad"/>
        <wait stepKey="waitForPopup" time="5" after="resetCustomerDataClick"/>
        <acceptPopup stepKey="clickOk" after="waitForPopup"/>
        
        <see selector="{{ContentManagementSection.StoreConfigurationPageSuccessMessage}}" userInput="Customers deleted successfully." stepKey="seeDeleteSuccessMessage" after="clickOk"/>

        <!-- Navigate to Admin Customer listing Page -->
        <actionGroup ref="LsNavigateToAdminCustomerActionGroup" stepKey="navigateToAdminCustomerPage" after="seeDeleteSuccessMessage" />
        <wait stepKey="waitForCatalogPageLoad" time="30" after="navigateToAdminCustomerPage"/>
        
        <grabTextFrom selector="{{LsConfigManagementSection.RowCount}}" stepKey="grabRowCount" after="navigateToAdminCustomerPage"/>
        <assertRegExp stepKey="assertRowCount" message="pass" after="grabRowCount">
            <expectedResult type="string">/^0 records/</expectedResult>
            <actualResult type="variable">grabRowCount</actualResult>
        </assertRegExp>
        
    </test>
</tests>
