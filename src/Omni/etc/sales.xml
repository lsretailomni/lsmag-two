<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Sales:etc/sales.xsd">
    <section name="quote">
        <group name="totals">
            <item name="ls_discount_amount" instance="Ls\Omni\Model\Total\Quote\LsDiscount" sort_order="350"/>
            <item name="ls_points_spent" instance="Ls\Omni\Model\Total\Quote\PointsSpent" sort_order="400"/>
            <item name="ls_points_earn" instance="Ls\Omni\Model\Total\Quote\PointsEarned" sort_order="500"/>
            <item name="ls_points_discount" instance="Ls\Omni\Model\Total\Quote\PointsDiscount" sort_order="600"/>
            <item name="ls_gift_card_amount_used" instance="Ls\Omni\Model\Total\Quote\GiftCardAmountUsed"
                  sort_order="700"/>
            <item name="ls_gift_card_no" instance="Ls\Omni\Model\Total\Quote\GiftCardNo" sort_order="800"/>
            <item name="ls_gift_card_pin" instance="Ls\Omni\Model\Total\Quote\GiftCardPin" sort_order="900"/>
        </group>
    </section>
    <section name="order_invoice">
        <group name="totals">
            <item name="GiftCardLoyaltyPoints" instance="Ls\Omni\Model\Invoice\Total\GiftCardLoyaltyPoints"
                  sort_order="160"/>
        </group>
    </section>
    <section name="order_creditmemo">
        <group name="totals">
            <item name="GiftCardLoyaltyPoints" instance="Ls\Omni\Model\Creditmemo\Total\GiftCardLoyaltyPoints"
                  sort_order="160"/>
        </group>
    </section>
</config>
