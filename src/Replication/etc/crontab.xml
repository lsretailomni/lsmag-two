<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="flat_replication">
        <!-- Most Important-->
        <job name="repl_lsc_barcodes" instance="Ls\Replication\Cron\ReplLscBarcodesTask" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="repl_variantregview" instance="Ls\Replication\Cron\ReplVariantregviewTask" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="repl_lsc_wi_extd_variant_values" instance="Ls\Replication\Cron\ReplLscWiExtdVariantValuesTask" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="repl_item_variant" instance="Ls\Replication\Cron\ReplItemVariantTask" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="repl_unit_of_measure" instance="Ls\Replication\Cron\ReplUnitOfMeasureTask" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="repl_itemuomupdview" instance="Ls\Replication\Cron\ReplItemuomupdviewTask" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="repl_lsc_wi_price" instance="Ls\Replication\Cron\ReplLscWiPriceTask" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="repl_lsc_inventory_lookup_table" instance="Ls\Replication\Cron\ReplLscInventoryLookupTableTask" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="repl_lsc_wi_item_buffer" instance="Ls\Replication\Cron\ReplLscWiItemBufferTask" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <!-- Less Important-->
        <job name="repl_lsc_attribute" instance="Ls\Replication\Cron\ReplLscAttributeTask" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
        <job name="repl_lsc_attribute_value" instance="Ls\Replication\Cron\ReplLscAttributeValueTask" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
        <job name="repl_lsc_attribute_option_value" instance="Ls\Replication\Cron\ReplLscAttributeOptionValueTask" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
        <job name="repl_hierarchyview" instance="Ls\Replication\Cron\ReplHierarchyviewTask" method="execute">
            <schedule>0 10 * * *</schedule>
        </job>
        <job name="repl_hierarchynodesview" instance="Ls\Replication\Cron\ReplHierarchynodesviewTask" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
        <job name="repl_hierarchynodeslinkview" instance="Ls\Replication\Cron\ReplHierarchynodeslinkviewTask" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
        <job name="repl_periodicdiscview" instance="Ls\Replication\Cron\ReplPeriodicdiscviewTask" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
        <job name="repl_lsc_validation_period" instance="Ls\Replication\Cron\ReplLscValidationPeriodTask" method="execute">
            <schedule>*/4 * * * *</schedule>
        </job>
        <job name="repl_lsc_retail_image_link" instance="Ls\Replication\Cron\ReplLscRetailImageLinkTask" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
        <job name="repl_vendor" instance="Ls\Replication\Cron\ReplVendorTask" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
        <job name="repl_vendoritemview" instance="Ls\Replication\Cron\ReplVendoritemviewTask" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
        <job name="repl_storeview" instance="Ls\Replication\Cron\ReplStoreviewTask" method="execute">
            <schedule>/15 * * * *</schedule>
        </job>
        <job name="repl_countryview" instance="Ls\Replication\Cron\ReplCountryviewTask" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
        <job name="repl_vat_posting_setup" instance="Ls\Replication\Cron\ReplVatPostingSetupTask" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
        <job name="repl_lsc_tender_type" instance="Ls\Replication\Cron\ReplLscTenderTypeTask" method="execute">
            <schedule>0 1 * * *</schedule>
        </job>
        <job name="repl_lsc_data_translation" instance="Ls\Replication\Cron\ReplLscDataTranslationTask" method="execute">
            <schedule>*/15 * * * *</schedule>
        </job>
        <job name="repl_data_translation_lang_code" instance="Ls\Replication\Cron\ReplDataTranslationLanguageCodeTask" method="execute">
            <schedule>*/15 * * * *</schedule>
        </job>
        <job name="repl_lsc_item_html_ml" instance="Ls\Replication\Cron\ReplLscItemHtmlMlTask" method="execute">
            <schedule>*/15 * * * *</schedule>
        </job>
    </group>
    <group id="replication">
        <job name="repl_attributes" instance="Ls\Replication\Cron\AttributesCreateTask" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_category" instance="Ls\Replication\Cron\CategoryCreateTask" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_products" instance="Ls\Replication\Cron\ProductCreateTask" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_tax_rules" instance="Ls\Replication\Cron\TaxRulesCreateTask" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_discount_create" instance="Ls\Replication\Cron\DiscountCreateTask" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_discount_create_setup" instance="Ls\Replication\Cron\DiscountCreateSetupTask" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_data_translation_to_magento" instance="Ls\Replication\Cron\DataTranslationTask"
             method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_price_sync" instance="Ls\Replication\Cron\SyncPrice" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_inventory_sync" instance="Ls\Replication\Cron\SyncInventory" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_item_updates_sync" instance="Ls\Replication\Cron\SyncItemUpdates" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_attributes_value_sync" instance="Ls\Replication\Cron\SyncAttributesValue" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="repl_vendor_attributes_sync" instance="Ls\Replication\Cron\SyncVendorAttributesValue"
             method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
    </group>
    <group id="sync_operations">
        <job name="repl_item_images_sync" instance="Ls\Replication\Cron\SyncImages" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
    </group>
    <group id="reset">
        <!-- To run everyday to get the best data of the day -->
        <job name="repl_inv_status_reset" instance="Ls\Replication\Cron\ResetReplInvStatusTask" method="execute">
            <schedule>0 0 * * *</schedule>
        </job>
        <job name="repl_price_status_reset" instance="Ls\Replication\Cron\ResetReplPriceStatusTask" method="execute">
            <schedule>0 0 * * *</schedule>
        </job>
        <job name="repl_discount_status_reset" instance="Ls\Replication\Cron\ResetReplDiscountStatusTask"
             method="execute">
            <schedule>0 0 * * *</schedule>
        </job>
        <job name="repl_discount_setup_status_reset" instance="Ls\Replication\Cron\ResetReplDiscountSetupStatusTask"
             method="execute">
            <schedule>0 0 * * *</schedule>
        </job>
    </group>
    <group id="sync_data">
        <job name="sync_version" instance="Ls\Replication\Cron\SyncVersion" method="execute">
            <schedule>0 0 * * 0</schedule>
        </job>
        <job name="sync_orders" instance="Ls\Replication\Cron\SyncOrders" method="execute">
            <schedule>*/15 * * * *</schedule>
        </job>
        <job name="sync_orders_edit" instance="Ls\Replication\Cron\SyncOrdersEdit" method="execute">
            <schedule>*/15 * * * *</schedule>
        </job>
        <job name="sync_customers" instance="Ls\Replication\Cron\SyncCustomers" method="execute">
            <schedule>*/15 * * * *</schedule>
        </job>
    </group>
</config>
