<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <!--Declare data source, columns list, button...-->
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">ls_repl_grids_item_listing.ls_repl_grids_item_data_source</item>
            <item name="deps" xsi:type="string">ls_repl_grids_item_listing.ls_repl_grids_item_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">ls_repl_grids_item_columns</item>
    </argument>
    <dataSource name="ls_repl_grids_item_data_source">
        <!--The data source-->
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">
                Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider
            </argument>
            <argument name="name" xsi:type="string">ls_repl_grids_item_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">repl_item_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/provider</item>
                    <item name="update_url" xsi:type="url" path="mui/index/render"/>
                    <item name="storageConfig" xsi:type="array">
                        <item name="indexField" xsi:type="string">repl_item_id</item>
                    </item>
                </item>
            </argument>
        </argument>
    </dataSource>

    <listingToolbar name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="sticky" xsi:type="boolean">true</item>
            </item>
        </argument>
        <bookmark name="bookmarks">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="namespace" xsi:type="string">ls_repl_grids_item_listing</item>
                    </item>
                </item>
            </argument>
        </bookmark>
        <component name="columns_controls">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsData" xsi:type="array">
                        <item name="provider" xsi:type="string">
                            ls_repl_grids_item_listing.ls_repl_grids_item_listing.ls_repl_grids_item_columns
                        </item>
                    </item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/controls/columns</item>
                    <item name="displayArea" xsi:type="string">dataGridActions</item>
                </item>
            </argument>
        </component>
        <paging name="listing_paging">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="storageConfig" xsi:type="array">
                        <item name="provider" xsi:type="string">
                            ls_repl_grids_item_listing.ls_repl_grids_item_listing.listing_top.bookmarks
                        </item>
                        <item name="namespace" xsi:type="string">current.paging</item>
                    </item>
                    <item name="selectProvider" xsi:type="string">
                        ls_repl_grids_item_listing.ls_repl_grids_item_listing.ls_repl_grids_item_columns.ids
                    </item>
                </item>
            </argument>
        </paging>
        <filters name="listing_filters" />
        <!-- Mass action -->
        <massaction name="listing_massaction">
            <action name="reset">
                <settings>
                    <confirm>
                        <message translate="true">Reset selected items?</message>
                        <title translate="true">Reset items</title>
                    </confirm>
                    <url path="ls_repl/reset/massReset"/>
                    <type>reset</type>
                    <label translate="true">Reset</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>

    <columns name="ls_repl_grids_item_columns">
        <!--The list of columns-->
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="indexField" xsi:type="string">repl_item_id</item>
                    <item name="sortOrder" xsi:type="number">0</item>
                </item>
            </argument>
        </selectionsColumn>
        <actionsColumn name="scroll" class="Ls\Replication\Ui\Component\Listing\Column\ScrollActions">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="label" xsi:type="string" translate="true">Scroll</item>
                    <item name="sortOrder" xsi:type="number">1</item>
                    <item name="draggable" xsi:type="boolean">true</item>
                </item>
            </argument>
        </actionsColumn>
        <column name="scope_id" class="Ls\Replication\Ui\Component\Listing\Column\Websites">
            <argument name="data" xsi:type="array">
