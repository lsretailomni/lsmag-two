            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="columnsProvider" xsi:type="string">
                        ls_repl_grids_discount_listing.ls_repl_grids_discount_listing.ls_repl_grids_discount_columns
